@model GlobalSolution.Models.PacienteCadastroViewModel

@{
    ViewBag.Title = "Editar um Paciente";
}

<div class="container">
    <h2 class="mt-5">Editar um Paciente</h2>

    @using (Html.BeginForm("Edit", "Paciente", FormMethod.Post, new { @class = "mt-3" }))
    {
        <div class="form-group">
            <label for="Nome">Nome</label>
            @Html.EditorFor(model => model.Paciente.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome" } })
        </div>

        <div class="form-group">
            <label for="DataNascimento">Data de Nascimento</label>
            @Html.EditorFor(model => model.Paciente.DataNascimento, new { htmlAttributes = new { @class = "form-control", placeholder = "Data de Nascimento" } })
        </div>

        <div class="form-group">
            <label for="Sexo">Sexo</label>
            @Html.EditorFor(model => model.Paciente.Sexo, new { htmlAttributes = new { @class = "form-control", placeholder = "Sexo" } })
        </div>

        <div class="form-group">
            <label for="Rua">Rua</label>
            @Html.EditorFor(model => model.Endereco.Rua, new { htmlAttributes = new { @class = "form-control", placeholder = "Rua" } })
        </div>

        <div class="form-group">
            <label for="Numero">Número</label>
            @Html.EditorFor(model => model.Endereco.Numero, new { htmlAttributes = new { @class = "form-control", placeholder = "Número" } })
        </div>

        <div class="form-group">
            <label for="Cep">CEP</label>
            @Html.EditorFor(model => model.Endereco.Cep, new { htmlAttributes = new { @class = "form-control", placeholder = "CEP" } })
        </div>

        <div class="form-group">
            <label for="Estado">Estado</label>
            @Html.DropDownListFor(model => model.NomeEstado, new SelectList(Model.Estados, "NomeEstado", "NomeEstado"), "Selecione um Estado", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="Cidade">Cidade</label>
            @Html.DropDownListFor(model => model.NomeCidade, new SelectList(Model.Cidades, "NomeCidade", "NomeCidade"), "Selecione uma Cidade", new { @class = "form-control" })
        </div>

        <button asp-type="submit">Salvar</button>
    }
</div>
