@model GlobalSolution.Models.MedicoViewModel

@{
    ViewBag.Title = "Cadastro de Médico";
}

<div class="container">
    <h2 class="mt-5">@ViewBag.Title</h2>

    @using (Html.BeginForm("Create", "Medico", FormMethod.Post, new { @class = "mt-3" }))
    {
        <div class="form-group">
            <label for="NomeMedico">Nome do Médico</label>
            @Html.EditorFor(model => model.NomeMedico, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do Médico" } })
        </div>

        <div class="form-group">
            <label for="Especialidade">Especialidade</label>
            @Html.EditorFor(model => model.Especialidade, new { htmlAttributes = new { @class = "form-control", placeholder = "Especialidade" } })
        </div>

        <div class="form-group">
            <label for="Crm">CRM</label>
            @Html.EditorFor(model => model.Crm, new { htmlAttributes = new { @class = "form-control", placeholder = "CRM" } })
        </div>

        <!-- Campos do Hospital -->
        <div class="form-group">
            <label for="NomeHospital">Nome do Hospital</label>
            @Html.EditorFor(model => model.NomeHospital, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do Hospital" } })
        </div>

        <div class="form-group">
            <label for="TelefoneHospital">Telefone do Hospital</label>
            @Html.EditorFor(model => model.TelefoneHospital, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefone do Hospital" } })
        </div>

        <div class="form-group">
            <label for="Latitude">Latitude</label>
            @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control", placeholder = "Latitude" } })
        </div>

        <div class="form-group">
            <label for="Longitude">Longitude</label>
            @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control", placeholder = "Longitude" } })
        </div>

        <!-- Adicione campos adicionais para endereço do hospital se necessário -->

        <button type="submit" class="btn btn-primary">Cadastrar</button>
    }
</div>
